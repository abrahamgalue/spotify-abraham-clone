---
import type { Playlist } from '@/lib/data'
import { CardPlayButton } from './CardPlayButton'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, artists, color } = playlist

const artistsString = artists.join(', ')
---

<article
  class='group relative hover:bg-card-secondary shadow-xs hover:shadow-xl bg-card-primary rounded-lg ransi transition-all duration-300 max-h-[266px]'
>
  <div
    class=`
    absolute
    right-6
    bottom-20  
    transition-all
    duration-500
    opacity-0
    group-hover:-translate-y-3
    group-hover:opacity-100
    z-10`
  >
    <CardPlayButton id={id} client:visible />
  </div>

  <a
    href={`/playlist/${id}`}
    class='playlist-item transition-all duration-300 flex relative p-4 overflow-hidden gap-2 pb-6 rounded-lg sm:w-40 md:w-[150px] lg:w-44 flex-col'
  >
    <picture class='aspect-square w-full h-auto flex-none shadow-lg'>
      <img
        src={cover}
        alt={`Cover of ${title} by ${artistsString}`}
        class='object-cover w-full h-full rounded-lg shadow-xl'
        transition:name=`playlist ${id} image`
      />
    </picture>

    <div class='flex flex-col'>
      <h4
        class='text-white text-base font-bold pt-2 truncate'
        transition:name=`playlist ${id} title`
      >
        {title}
      </h4>

      <span
        class='text-sm text-secondary truncate'
        transition:name=`playlist ${id} artists`
      >
        {artistsString}
      </span>
    </div>
  </a>
</article>
